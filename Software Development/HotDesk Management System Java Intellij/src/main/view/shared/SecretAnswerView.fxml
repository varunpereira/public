<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="523.0" prefWidth="810.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="main.controller.shared.SecretAnswerController">
    <!--    <children>-->

    <Label fx:id="isConnected" layoutX="24.0" layoutY="28.0" text="Database Status"/>
    <Button defaultButton="true" layoutX="587.0" layoutY="46.0" mnemonicParsing="false" onAction="#goToLogin"
            prefHeight="27.0" prefWidth="99.0" text="Back to Login" textAlignment="CENTER" textFill="WHITE"
            AnchorPane.bottomAnchor="636.0" AnchorPane.leftAnchor="587.0" AnchorPane.rightAnchor="124.0"
            AnchorPane.topAnchor="46.0">
        <font>
            <Font name="System Font" size="13.0"/>
        </font>
    </Button>

    <Label layoutX="281.0" layoutY="46.0" prefHeight="27.0" prefWidth="246.0" text="Answer Secret Question">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>

    <Label layoutX="126.0" layoutY="82.0" text="Enter Username:"/>
    <TextField fx:id="username" layoutX="125.0" layoutY="103.0" prefHeight="41.0" prefWidth="479.0"/>
    <Button defaultButton="true" layoutX="602.0" layoutY="103.0" mnemonicParsing="false" onAction="#getQuestion"
            prefHeight="41.0" prefWidth="84.0" text="Enter" textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font name="System Font" size="13.0"/>
        </font>
    </Button>
    <Label fx:id="secretQ" layoutX="126.0" layoutY="154.0" text="Secret Question:"/>
    <TextField fx:id="secretA" layoutX="125.0" layoutY="179.0" prefHeight="41.0" prefWidth="479.0"
               AnchorPane.bottomAnchor="489.0" AnchorPane.leftAnchor="125.0" AnchorPane.rightAnchor="206.0"
               AnchorPane.topAnchor="179.0"/>
    <Button defaultButton="true" layoutX="602.0" layoutY="179.0" mnemonicParsing="false" onAction="#checkAnswerTrue"
            prefHeight="41.0" prefWidth="84.0" text="Submit" textAlignment="CENTER" textFill="WHITE"
            AnchorPane.bottomAnchor="489.0" AnchorPane.leftAnchor="602.0" AnchorPane.rightAnchor="124.0"
            AnchorPane.topAnchor="179.0">
        <font>
            <Font name="System Font" size="13.0"/>
        </font>
    </Button>
    <Label fx:id="error" layoutX="125.0" layoutY="230.0" prefHeight="18.0" prefWidth="362.0" textFill="#fa2020"/>

    <!--    </children>-->

</AnchorPane>
